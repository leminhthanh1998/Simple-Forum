@model SimpleForum.Areas.Admin.Models.Home.EditForumModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa diễn đàn con "+Model.Title;
}


<div class="upload-container">
    <div class="upload-form drop-shadow">
        <form asp-area="Admin" asp-controller="Home" asp-action="EditForum" method="post" enctype="multipart/form-data" id="upload-form">
            <div class="form-group">
                <label asp-for="Title">Tiêu đề</label>
                <input asp-for="Title" class="form-control" value="@Model.Title"/>
            </div>
            <div class="form-group">
                <label asp-for="Description">Mô tả</label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
            </div>
            <div>
                <label class="btn btn-default btn-file">
                    Image
                    <input type="file" name="file" style="display:none" />
                </label>
            </div>
            <div class="submit">
                <button type="submit" id="btn-upload" class="btn btn-info">
                    Lưu
                </button>
                <input type="hidden" asp-for="Id"/>
            </div>
        </form>
    </div>
</div>
